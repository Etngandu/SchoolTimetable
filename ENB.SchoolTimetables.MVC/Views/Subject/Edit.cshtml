@model ENB.SchoolTimetables.MVC.Models.CreateAndEditSubject

@{
    ViewData["Title"] = "Create";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Edit Subject</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0 10px 0">
                            <label asp-for="SubjectName" class="control-label"></label>
                        </div>
                        <input asp-for="SubjectName" class="form-control" />
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0 10px 0">
                            <label asp-for="SubjectDescription" class="control-label"></label>
                        </div>
                        <textarea asp-for="SubjectDescription" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="SubjectDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index"  class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using ENB.SchoolTimetables.Entities;
@model ENB.SchoolTimetables.MVC.Models.DisplayPlannedTimeTable;

@{
    ViewData["Title"] = "Details";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Details Planned Timetable: @Html.DisplayFor(model => model.NameClass)</strong></h2>
</div>

<div id="view-all">
